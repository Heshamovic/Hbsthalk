<a class="btn btn-secondary" id="askBtn" href="/Home/AskQuestions">Ask a Question</a>

<div id="statsDiv" style="display:none">
    <div style="border-bottom:1px solid #dedede; color:#881125">ADS</div>
</div>
<div id="statsDiv">
    <div style="border-bottom:1px solid #dedede; color:#881125">Highest Points</div>
    @{int x = 0;}
    @foreach (var i in ViewBag.topPoints)
    {
        <div id="Highpts" class="row">
            <img class="rounded-circle col-5" src="~/Content/Images/Yosef Amer 20141103_123040.jpg" />
            <div class="col-7" style="height:auto; font-size:0.75em">
                <p style="margin:0px; color:#881125; font-weight:700; font-size:1em">@i.UserName</p>
                <div id="rankLabel" style="color:#fff; background-color:@ViewBag.topPointsRank[x].rank1">@ViewBag.topPointsRank[x++].rankName</div>
                <p>@i.CredibilityPoints Points</p>
            </div>
        </div>
    }
</div>
<div id="statsDiv">
    <div style="border-bottom:1px solid #dedede; color:#881125">Stats</div>
    <div class="statsState">
        <div class="row">
            <div class="col-1"><i class="fas fa-question" style="color:#881125"></i></div>
            <div class="col-10"><span>Questions (@ViewBag.numQ)</span></div>
        </div>
    </div>
    <div class="statsState">
        <div class="row">
            <div class="col-1"><i class="fas fa-check" style="color:#881125"></i></div>
            <div class="col-10"><span>Answers (@ViewBag.numAns)</span></div>
        </div>
    </div>
    <div class="statsState">
        <div class="row">
            <div class="col-1"><i class="fas fa-asterisk" style="color:#881125"></i></div>
            <div class="col-10"><span>Best Answers (@ViewBag.numBAns)</span></div>
        </div>
    </div>
    <div class="statsState">
        <div class="row">
            <div class="col-1"><i class="fas fa-users" style="color:#881125"></i></div>
            <div class="col-10"><span>Users (@ViewBag.numAcc)</span></div>
        </div>
    </div>
</div>
<div id="statsDiv" style="padding:15px 10px 10px 10px">
    <div style="border-bottom:1px solid #dedede; color:#881125; margin:15px 10px 0px 10px">Find US</div>
    <div class="findAcc" style="background-color:#5d82d1; padding-right:30px">
        <div class="row">
            <div class="col-9">
                <p>280</p>
                <p>People like US</p>
            </div>
            <div class="col-3">
                <i class="fab fa-facebook-f" style="font-size:4em"></i>
            </div>
        </div>
    </div>
    <div class="findAcc" style="background-color:#d73d32">
        <div class="row">
            <div class="col-8">
                <p>9,134</p>
                <p>Followers</p>
            </div>
            <div class="col-4">
                <i class="fab fa-google-plus-g" style="font-size:4em"></i>
            </div>
        </div>
    </div>
</div>